@page
@using Microsoft.AspNetCore.Mvc.Localization

@inject IViewLocalizer Localizer


@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h4>@ViewData["Title"]</h4>
<partial name="_StatusMessage" model="Model.StatusMessage" />
<div class="row">
    <div class="col-md-6">
        <form id="profile-form" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                @Html.LabelFor(x => x.Input.FirstName, Localizer["Username"].Value)
                <input asp-for="Username" class="form-control" disabled />
            </div>
            <div class="form-group">
                @Html.LabelFor(x => x.Input.FirstName, Localizer["FirstName"].Value)
                <input asp-for="Input.FirstName" class="form-control" disabled />
            </div>
            <div class="form-group">
                @Html.LabelFor(x => x.Input.FirstName, Localizer["LastName"].Value)
                <input asp-for="Input.LastName" class="form-control" disabled />
            </div>
            <div class="form-group">
                @Html.LabelFor(x => x.Input.FirstName, Localizer["DateOfBirth"].Value)
                <input type="date" asp-for="Input.DateOfBirth" class="form-control" disabled />
            </div>
            <div class="form-group">
                @Html.LabelFor(x => x.Input.FirstName, Localizer["PhoneNumber"].Value)
                <input asp-for="Input.PhoneNumber" class="form-control" />
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                @Html.LabelFor(x => x.Input.FirstName, Localizer["City"].Value)
                <input asp-for="Input.City" class="form-control" />
                <span asp-validation-for="Input.City" class="text-danger"></span>
            </div>
            <div class="form-group">
                @Html.LabelFor(x => x.Input.FirstName, Localizer["Address"].Value)
                <input asp-for="Input.Address" class="form-control" />
                <span asp-validation-for="Input.Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                @Html.LabelFor(x => x.Input.FirstName, Localizer["PostCode"].Value)
                <input asp-for="Input.PostCode" class="form-control" />
                <span asp-validation-for="Input.PostCode" class="text-danger"></span>
            </div>
            <button id="update-profile-button" type="submit" class="btn btn-default">@Localizer["Save"].Value</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}